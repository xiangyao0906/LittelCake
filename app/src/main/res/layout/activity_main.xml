<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="MainViewBinding">

        <variable
            name="viewModel"
            type="com.xinly.cake.module.main.MainViewModel" />

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".module.main.MainActivity">

       <Button
           android:layout_margin="20dp"
           onClickCommand="@{viewModel.videoLangch}"
           android:text="视频"
           android:layout_width="match_parent"
           android:layout_height="70dp"/>
        <Button
            android:layout_margin="20dp"
            onClickCommand="@{viewModel.openEyesLangch}"
            android:text="开眼"
            android:layout_width="match_parent"
            android:layout_height="70dp"/>

        <Button
            android:layout_margin="20dp"
            onClickCommand="@{viewModel.recordLangch}"
            android:text="录制视频"
            android:layout_width="match_parent"
            android:layout_height="70dp"/>

        <Button
            android:layout_margin="20dp"
            onClickCommand="@{viewModel.editeLangch}"
            android:text="EditText"
            android:layout_width="match_parent"
            android:layout_height="70dp"/>

    </LinearLayout>
</layout>